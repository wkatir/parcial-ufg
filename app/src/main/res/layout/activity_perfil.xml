<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PerfilActivity">

    <LinearLayout
        android:id="@+id/layoutPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil de Usuario"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_16sdp" />

        <!-- Mensaje personalizado -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardBackgroundColor="#FFFFFFFF"
            android:layout_marginBottom="@dimen/_16sdp">

            <TextView
                android:id="@+id/tvMensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14ssp"
                android:textStyle="italic"
                android:gravity="center"
                android:padding="@dimen/_16sdp"
                tools:text="Hola Juan, eres un Adulto de género Masculino." />
        </com.google.android.material.card.MaterialCardView>

        <!-- Card con datos del perfil -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <!-- Nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <TextView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_nombre"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/black"
                        tools:text="Juan" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <!-- Edad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <TextView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_edad"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvEdad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/black"
                        tools:text="25" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <!-- Género -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <TextView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_genero_perfil"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvGenero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="@color/black"
                        tools:text="Masculino" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <!-- Categoría -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_categoria"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/_13ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        tools:text="Adulto" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Editar Perfil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="@string/btn_editar_perfil"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_10sdp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart" />

    </LinearLayout>
</ScrollView>
