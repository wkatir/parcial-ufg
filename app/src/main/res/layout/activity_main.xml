<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp"
        android:gravity="center_horizontal">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Usuario"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_20sdp" />

        <!-- Card del formulario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:strokeWidth="0dp"
            android:layout_marginBottom="@dimen/_16sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_nombre"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/_13ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Edad -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp"
                    app:suffixText="años">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEdad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_edad"
                        android:inputType="number"
                        android:textSize="@dimen/_13ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Spinner Género -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_genero"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="#666666"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_4sdp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:strokeColor="#79747E"
                    app:strokeWidth="1dp"
                    android:layout_marginBottom="@dimen/_12sdp">

                    <Spinner
                        android:id="@+id/spinnerGenero"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:entries="@array/genero_array"
                        android:background="@android:color/transparent" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Divider -->
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp" />

                <!-- CheckBox Términos -->
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/cbTerminos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_terminos"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginBottom="@dimen/_6sdp" />

                <!-- Switch Recordar -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchRecordar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/switch_recordar"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Registrar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="@string/btn_registrar"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <!-- Botón Ver Perfil Guardado -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerPerfil"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:text="@string/btn_ver_perfil"
            android:textSize="@dimen/_13ssp"
            app:cornerRadius="@dimen/_10sdp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>
</ScrollView>
